@model DGTradesIn.Models.Transcation

@{
    ViewBag.Title = "Create";
}

<h2>Create a swap request </h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Transcation</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    @if (ViewBag.GameCodeOffer != null)
    {
        <div class="form-group">
            @Html.LabelFor(model => model.GameCodeOffer, "GameCodeOffer", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("GameCodeOffer", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GameCodeOffer, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.HiddenFor(x => x.TransactionDate);

        @Html.HiddenFor(x => x.TransactionRequestedBy);
        @Html.HiddenFor(x => x.TransactionRequestedTo);
        @Html.HiddenFor(x => x.GameCodeRequested);
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <h3>You don't have any game code to swap </h3>
        </div>
    }

</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
